<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.idks.ecalc.MainActivity">

    <EditText
        android:id="@+id/salaryField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addSalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/addSal_button"
        app:layout_constraintEnd_toEndOf="@+id/salaryField"
        app:layout_constraintStart_toStartOf="@+id/salaryField"
        app:layout_constraintTop_toBottomOf="@+id/salaryField" />

    <EditText
        android:id="@+id/expField"
        android:hint="Enter Expenditure"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/salaryField"
        app:layout_constraintStart_toStartOf="@+id/salaryField"
        app:layout_constraintTop_toBottomOf="@+id/addSalButton" />

    <Button
        android:id="@+id/addExpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/addExp_button"
        app:layout_constraintEnd_toEndOf="@+id/salaryField"
        app:layout_constraintStart_toStartOf="@+id/salaryField"
        app:layout_constraintTop_toBottomOf="@+id/expField" />

    <Button
        android:id="@+id/calPer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/calExpPer_button"
        app:layout_constraintEnd_toEndOf="@+id/salaryField"
        app:layout_constraintStart_toStartOf="@+id/salaryField"
        app:layout_constraintTop_toBottomOf="@+id/addExpButton" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/salaryField"
        app:layout_constraintStart_toStartOf="@+id/salaryField"
        app:layout_constraintTop_toBottomOf="@+id/calPer" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/salaryField"
        app:layout_constraintStart_toStartOf="@+id/salaryField"
        app:layout_constraintTop_toBottomOf="@+id/percentage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/salaryField"
        app:layout_constraintStart_toStartOf="@+id/salaryField"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />



</android.support.constraint.ConstraintLayout>
